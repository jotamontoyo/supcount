
    <div class="container-fluid animated animated-fast fadeIn margen_superior" id="usuarios">

        <h4><img src="/images/user.png" alt="" /> Usuarios</h4>


        <div class="panel panel-default table-responsive" id="usuarios-panel">

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="text-center">NÃºmero</th>
                        <th class="text-center">Usuario</th>
                        <th class="text-center">Centro</th>
                        <th class="text-center">Administrador</th>


                    </tr>
                </thead>
                <tbody>
                    <% for (let i in user) { %>
                        <tr>
                            <% if (!user[i].isSuperAdmin) {%>
                                <td><%= user[i].id %></td>
                                <td><%= user[i].username %></td>
                                <td><%= user[i].centro %></td>
                                <td>
                                    <% if (user[i].isAdmin) {%>
                                        <i class="fa fa-check"></i>
                                    <%}%>
                                </td>

                                <% if (session.user) {
                                    if (session.user.isAdmin) {%>
                                        <td style="width:40px"> <a class="" href="/user/<%= user[i].id %>/edit">
                                            <img src="/images/edit3.png" style="width: 20px;"/>
                                        </a></td>
                                        <td style="width:40px">
                                            <form method="post" action="/user/<%= user[i].id %>/destroy?_method=delete">
                                                <button class="btn btn-danger btn-xs" type="submit" onClick="return confirm('Borrar el Usuario: <%= user[i].username %>');">
                                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                                </button>
                                            </form>
                                        </td>
                                    <%}%>
                                <%}%>

                            <%}%>

                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <% if (session.user) {
            if (session.user.isAdmin) {%>
                <ul class="tira_botones">

					<li><a class="btn btn_gral" href="/user/new">
					    <i class="fa fa-plus" alt=""></i> Crear Usuario
					</a></li>

				</ul>
            <%}%>
        <%}%>

        <br>

    </div>
