
	<div class="container" id="user_form">

		<h4><img src="/images/user2.png" alt=""> Usuario</h4>
	    <br>

		<div class="form-group">
			<label for="preg" class="col-sm-3 control-label">Usuario:</label>
			<div class="col-sm-9">
				<input type="text" class="form-control" id="username" name="user[username]" value="<%= user.username %>"/>
			</div>
		</div>

		<div class="form-group">
			<label for="resp" class="col-sm-3 control-label">Clave:</label>
			<div class="col-sm-9">
				<input type="password" class="form-control" id="pass" name="user[password]"/>
			</div>
		</div>


		<% if (session.user.isSuperAdmin) {%>

			<div class="form-group">
				<label for="admin" class="col-md-3 control-label">Administrador:</label>
				<div class="col-md-1">
					<% if (user.isAdmin) { %>
						<input type="checkbox" class="form-control" checked id="admin" name="user[isAdmin]" value="<%= user.isAdmin %>"/>
					<%} else { %>
						<input type="checkbox" class="form-control" id="admin" name="user[isAdmin]" value="<%= user.isAdmin %>"/>
					<%}%>


				</div>
			</div>



			<div class="form-group">
				<label for="centro" class="col-sm-3 control-label">Centro:</label>
				<div class="col-sm-9">
					<select class="form-control" id="centro" name="user[centro]">
						<% for (var index in centros) {%>
							<option value="<%=centros[index].nombre%>" <% if (user.centro===centros[index].nombre) {%> selected <%}%>><%=centros[index].nombre%></option>
						<%}%>
					</select>
				</div>
			</div>


		<%} else {%>

			<% user.centro = session.user.centro %>

			<input type="text" class="form-control hidden" id="centro" name="user[centro]" value="<%= user.centro %>"/>
<!--			<input type="text" class="form-control hidden" id="isAdmin" name="user[isAdmin]" value="<%= user.isAdmin %>"/> -->

		<%}%>


		<div class="form-group">
			<div class="col-sm-12 text-center">

				<a href="/user"><button class="btn btn-danger btn-sm" type="button"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancelar</button></a>

				<button class="btn btn-success btn-sm" type="submit" id="grabar" value="Salvar">
					<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Grabar
				</button>

			</div>
		</div>

	</div>
