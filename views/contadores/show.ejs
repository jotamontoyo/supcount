
<div class="container animated animated-fast fadeIn margen_superior">

	<div class="row">

		<div class="col-md-6 col-sm-6 datos_cabeceras">

			<div class="col-md-6 col-sm-6 col-xs-6 alineacion_dcha">
				<h5>Contador nº: </h5>
			</div>
			<div class="col-md-6 col-sm-6 col-xs-6 alineacion_izda">
				<h5><%= contador.id %></h5>
			</div>

			<div class="col-md-6 col-sm-6 col-xs-6 alineacion_dcha">
				<h5>Nombre: </h5>
			</div>
			<div class="col-md-6 col-sm-6 col-xs-6 alineacion_izda">
				<h5 class="texto_tipo_1"><%= contador.nombre %></h5>
			</div>

			<div class="col-md-6 col-sm-6 col-xs-6 alineacion_dcha">
				<h5>Depósito: </h5>
			</div>
			<div class="col-md-6 col-sm-6 col-xs-6 alineacion_izda">
				<h5>
					<% if (contador.deposito) { %>
						<span class="texto_tipo_2">Sí </span><span class="texto_tipo_0"> No</span>
					<%} else {%>
						<span class="texto_tipo_0">Sí </span><span class="texto_tipo_2"> No</span>
					<%}%>
				</h5>
			</div>

		</div>

	</div>


	<div class="container" id="panel_criterios">

		<br>
		<h4 class="text-center texto_tipo_3">Criterios</h4>

		<div class="panel">

			<table class="table table-striped table-hover">

				<thead>
					<tr>
						<th class="text-center">Mes</th>
						<th class="text-center">Máximo</th>
						<th class="text-center">Mínimo</th>
					</tr>
				</thead>


				<tbody>

					<% for (var i in criterios) {%>

						<tr>

							<td class="text-center"><a href="/contadores/<%= contador.id %>/criterios/<%= criterios[i].id %>/edit"><%= criterios[i].mes %></a></td>
							<td class="text-center"><%= criterios[i].max %></td>
							<td class="text-center"><%= criterios[i].min %></td>

							<% if (session.user) {
								if (session.user.isAdmin) {%>

									<td style="width:40px"> <a class="" href="/contadores/<%= contador.id %>/criterios/<%= criterios[i].id %>/edit">
										<img src="/images/edit3.png" style="width: 20px;"/>
									</a></td>

									<td style="width:40px">
										<form method="post" action="/contadores/<%= contador.id %>/criterios/<%= criterios[i].id %>/destroy?_method=delete">
											<button class="btn btn-danger btn-xs" type="submit" onClick="return confirm('Borrar el criterio mes: <%= criterios[i].mes %>');">
												<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
											</button>
										</form>
									</td>
								<%}%>
							<%}%>

						</tr>


					<%}%>

				</tbody>

			</table>

		</div>


		<% if (session.user) {
			if (session.user.isAdmin) {%>
				<ul class="tira_botones">
					<li><a class="btn btn_gral" href="/contadores/<%= contador.id %>/criterios/new">
						<i class="fa fa-plus" alt=""></i> Nuevo Criterio
					</a></li>
				</ul>
			<%}%>
		<%}%>

		<br>

	</div>



</div>
