            <div class="form-group">
        		<label for="mes" class="col-sm-3">Mes:</label>
        		<div class="col-sm-9">
        			<select class="form-control" id="mes" name="mes_index[mes]">

                        <option value=1 <%if (mes_index.mes===1) {%> selected <%}%>>Enero</option>
                        <option value=2 <%if (mes_index.mes===2) {%> selected <%}%>>Febrero</option>
