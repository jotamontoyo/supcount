
<div class="form-group">	
	<label for="preg" class="col-sm-2 control-label">Nombre:</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" id="preg" name="proveedor[nombre]" value="<%= proveedor.nombre %>" placeholder="nombre"/>
	</div>
</div>

<div class="form-group">	
	<label for="preg" class="col-sm-2 control-label">Teléfono:</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" id="telf" name="proveedor[telefono]" value="<%= proveedor.telefono %>" placeholder="teléfono"/>
	</div>
</div>

<div class="form-group">	
	<label for="preg" class="col-sm-2 control-label">eMail:</label>
	<div class="col-sm-10">
		<input type="email" class="form-control" id="email" name="proveedor[email]" value="<%= proveedor.email %>" placeholder="eMail"/>
	</div>
</div>
	
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<a href="/proveedores">
			<button class="btn btn-danger btn-sm">
				<span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancelar
			</button>
		</a>
		<button class="btn btn-success btn-sm" type="submit" value="Salvar">
			<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Grabar
		</button>
	</div>
</div>
	







