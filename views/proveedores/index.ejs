	
<div class="container-fluid">

	<h4>Proveedores</h4><br>

	<div class="panel panel-default table-responsive" id="quizes-panel">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Código</th>
					<th>Nombre</th>
					<th>Teléfono</th>
					<th>eMail</th>
				</tr>
			</thead>
			<tbody>
				<% var i; for (i=0; i < proveedores.length; i++) { %>
					<tr>
						<td><%= proveedores[i].id %></td>
						<td><a href="/proveedores/<%= proveedores[i].id %>"><%= proveedores[i].nombre %> </a></td>
						<td><a href="/proveedores/<%= proveedores[i].id %>"><%= proveedores[i].telefono %> </a></td>
						<td><a href="/proveedores/<%= proveedores[i].id %>"><%= proveedores[i].email %> </a></td>
						<% if (session.user.isAdmin) {%>
							<td><a href="/proveedores/<%= proveedores[i].id %>/edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
							<td>
								<form method="post" action="proveedores/<%= proveedores[i].id %>?_method=delete">
									<button class="btn btn-danger btn-sm" type="submit" onClick="return confirm('Borrar: <%= proveedores[i].nombre %>');">
										<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
									</button>
								</form>
							</td>
						<%}%>
					</tr>
				<% } %>
			</tbody>
		</table>
	</div>

	<% if (session.user.isAdmin) { %>
		<p><a href="/proveedores/new"><button type="button" class="btn btn-primary">
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Crear Proveedor</button></a></p>
	<% } %>	

</div>