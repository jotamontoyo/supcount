
    <div class="container-fluid animated animated-fast fadeIn margen_superior" id="vasos">

        <h4><img src="/images/vasos.png" alt="" /> Vasos</h4>


        <div class="panel panel-default table-responsive" id="vasos_panel">

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Número</th>
                        <th>Nombre</th>
                        <th>Ubicación</th>
                        <th>Capacidad</th>
                        <th>Interior</th>
                        <th>Ensayo</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i in vasos) { %>
                        <tr>

                            <td><a href="/vasos/<%= vasos[i].id %>/edit"><%= vasos[i].id %></a></td>
                            <td><a href="/vasos/<%= vasos[i].id %>/edit"><%= vasos[i].nombre %></a></td>
                            <td><%= vasos[i].ubicacion %></td>
                            <td><%= vasos[i].capacidad %></td>
                            <td>
                                <% if (vasos[i].interior) {%>
                                    <i class="fa fa-check"></i>
                                <%}%>

                            </td>
                            <td><%= vasos[i].tipo_ensayo %></td>

                            <% if (session.user) {
                                if (session.user.isAdmin) {%>
                                    <td style="width:40px"> <a class="" href="/vasos/<%= vasos[i].id %>/edit">
                                        <img src="/images/edit3.png" style="width: 20px;"/>
                                    </a></td>
                                    <td style="width:40px">
                                        <form method="post" action="vasos/<%= vasos[i].id %>/destroy?_method=delete">
                                            <button class="btn btn-danger btn-xs" type="submit" onClick="return confirm('Borrar el Vaso: <%= vasos[i].nombre %>');">
                                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            </button>
                                        </form>
                                    </td>
                                <%}%>
                            <%}%>

                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <% if (session.user) {
            if (session.user.isAdmin) {%>

<!--                <p><a href="/vasos/new"><button type="button" class="btn btn-primary">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Crear vaso</button></a>

                </p> -->

                <ul class="tira_botones">

					<li><a class="btn btn_gral" href="/vasos/new">
						<i class="fa fa-plus" alt=""></i> Crear Vaso
					</a></li>

				</ul>

            <%}%>
        <%}%>

        <br>

    </div>
